# ⚠️  S1 Protocol: Environment Verification
# This file is validated at boot time. Invalid values will cause immediate crash.
# See: packages/config/src/index.ts for validation rules

# ==========================================
# CRITICAL SECURITY VARIABLES (S1 Enforced)
# ==========================================
# JWT_SECRET: Minimum 32 characters, alphanumeric + hyphen/underscore only
# Will crash on: missing, <32 chars, special characters (@, !, #, etc.)
JWT_SECRET=your_very_long_secret_key_minimum_32_chars_long
JWT_EXPIRES_IN=7d

# ==========================================
# DATABASE (PostgreSQL with pgvector)
# ==========================================
DATABASE_URL=postgresql://apex:apex_secret@localhost:5432/apex_v2
POSTGRES_USER=apex
POSTGRES_PASSWORD=apex_secret
POSTGRES_DB=apex_v2

# ==========================================
# REDIS (Rate Limiting S6 + Caching)
# ==========================================
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=redis_secret

# ==========================================
# MINIO (S3-Compatible Storage)
# ==========================================
MINIO_ENDPOINT=localhost
MINIO_PORT=9000
MINIO_USE_SSL=false
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin123
MINIO_BUCKET_NAME=apex-assets
MINIO_REGION=us-east-1
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=minioadmin123

# ==========================================
# APPLICATION SETTINGS
# ==========================================
NODE_ENV=development
PORT=3000

# Rate Limiting (S6 Protocol)
RATE_LIMIT_TTL=60
RATE_LIMIT_MAX=100

# S1 Enforcement (set to 'false' only in specific test scenarios)
ENABLE_S1_ENFORCEMENT=true
