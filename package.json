{
  "name": "apex-v2",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "cross-env NODE_OPTIONS=--max-old-space-size=8192 turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "format": "biome format --write .",
    "check": "biome check --apply .",
    "ci": "biome ci .",
    "test": "turbo run test",
    "typecheck": "turbo run typecheck",
    "cli": "cd apps/api && bun run cli",
    "db:push": "echo 'No migrations to push'",
    "postinstall": "echo 'Run: bun install'"
  },
  "devDependencies": {
    "@biomejs/biome": "1.5.3",
    "@vitest/coverage-istanbul": "1.6.1",
    "@vitest/coverage-v8": "1.6.1",
    "cross-env": "^10.1.0",
    "reflect-metadata": "^0.2.2",
    "turbo": "latest",
    "vitest": "1.6.1"
  },
  "packageManager": "npm@10.0.0",
  "engines": {
    "bun": ">=1.0.0"
  },
  "overrides": {
    "glob": "^10.4.5",
    "rimraf": "^5.0.5",
    "lodash": "^4.17.21",
    "fast-xml-parser": "^5.3.4",
    "tmp": "^0.2.4",
    "esbuild": "^0.25.0",
    "webpack": "^5.94.0",
    "micromatch": "^4.0.8"
  },
  "dependencies": {
    "@nestjs/swagger": "^11.2.6",
    "swagger-ui-express": "^5.0.1"
  }
}