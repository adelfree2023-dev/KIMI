{
  "name": "apex-v2",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "test:unit": "turbo run test:unit",
    "format": "biome format --write .",
    "check": "biome check --apply .",
    "provision:tenant": "bun run --filter @apex/provisioning-cli"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.5.0",
    "turbo": "^1.11.0"
  },
  "overrides": {
    "glob": "^10.4.5",
    "rimraf": "^5.0.5",
    "lodash": "^4.17.21",
    "fast-xml-parser": "^5.3.4",
    "esbuild": "^0.25.0",
    "micromatch": "^4.0.8",
    "tmp": "^0.2.6",
    "webpack": "^5.105.0"
  },
  "packageManager": "bun@1.0.0",
  "engines": {
    "bun": ">=1.0.0",
    "node": ">=20.0.0"
  }
}