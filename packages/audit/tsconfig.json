{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "declaration": true,
    "emitDeclarationOnly": true,
    "paths": {
      "@apex/db": [
        "../db/src/index.ts"
      ],
      "@apex/middleware": [
        "../middleware/src/index.ts"
      ]
    }
  },
  "include": [
    "src/**/*"
  ],
