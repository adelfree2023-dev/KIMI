{
  "name": "@apex/config",
  "version": "1.0.0",
  "type": "module",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs",
      "types": "./dist/index.d.ts"
    }
  },
  "scripts": {
    "build": "bun build ./src/index.ts --outdir ./dist --target node && bun build ./src/index.ts --outfile ./dist/index.cjs --target node && tsc --emitDeclarationOnly",
    "test": "vitest run",
    "test:unit": "vitest run --coverage",
    "lint": "biome check .",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "bun-types": "latest",
    "vitest": "^1.0.0",
    "@biomejs/biome": "^1.5.0",
    "typescript": "^5.3.0"
  }
}