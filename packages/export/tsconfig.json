{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "composite": false,
    "outDir": "./dist",
    "rootDir": "../../",
    "baseUrl": ".",
    "types": [
      "node",
      "bun-types"
    ],
    "declaration": true,
    "paths": {
      "@apex/audit": [
        "../audit/src/index.ts"
      ],
      "@apex/db": [
        "../db/src/index.ts"
      ],
      "@apex/middleware": [
        "../middleware/src/index.ts"
      ],
      "@apex/config": [
        "../config/src/index.ts"
      ]
    }
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "build",
    "**/*.test.ts"
  ]
}