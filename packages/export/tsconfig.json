{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "composite": false,
    "outDir": "./dist",
    "rootDir": ".",
    "baseUrl": ".",
    "types": [
      "node",
      "bun-types"
    ],
    "declaration": true,
    "paths": {
      "@apex/audit": [
        "../audit/src"
      ],
      "@apex/db": [
        "../db/src"
      ],
      "@apex/middleware": [
        "../middleware/src"
      ]
    }
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "build",
    "**/*.test.ts"
  ],
  "references": [
    {
      "path": "../audit"
    },
    {
      "path": "../db"
    },
    {
      "path": "../middleware"
    }
  ]
}