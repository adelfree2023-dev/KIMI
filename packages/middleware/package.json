{
  "name": "@apex/middleware",
  "version": "1.0.0",
  "type": "module",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs",
      "types": "./dist/index.d.ts"
    }
  },
  "scripts": {
    "build": "bun build ./src/index.ts --outdir ./dist --target node && bun build ./src/index.ts --outfile ./dist/index.cjs --target node",
    "test": "vitest run",
    "test:unit": "vitest run --coverage",
    "lint": "biome check .",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@apex/config": "workspace:*",
    "@apex/db": "workspace:*"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "bun-types": "latest",
    "vitest": "^1.0.0",
    "@biomejs/biome": "^1.5.0",
    "@types/express": "^4.17.21"
  }
}
