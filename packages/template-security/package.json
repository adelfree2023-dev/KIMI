{
    "name": "@apex/template-security",
    "version": "1.0.0",
    "description": "Security validation and penetration testing for Apex v2 templates",
    "main": "./dist/index.js",
    "module": "./dist/index.mjs",
    "types": "./dist/index.d.ts",
    "exports": {
        ".": {
            "types": "./dist/index.d.ts",
            "import": "./dist/index.mjs",
            "require": "./dist/index.js"
        }
    },
    "scripts": {
        "build": "cross-env NODE_OPTIONS=--max-old-space-size=8192 tsup",
        "dev": "tsup --watch",
        "test": "bun test",
        "test:coverage": "bun test --coverage"
    },
    "keywords": [
        "security",
        "validation",
        "penetration-testing",
        "template"
    ],
    "dependencies": {
        "zod": "^3.22.4",
        "glob": "^10.3.10",
        "fast-glob": "^3.3.2"
    },
    "devDependencies": {
        "@types/bun": "latest",
        "cross-env": "^10.1.0",
        "tsup": "^8.0.1",
        "typescript": "^5.3.3"
    }
}