{
    "$schema": "https://turbo.build/schema.json",
    "globalDependencies": [
        "**/.env.*local"
    ],
    "pipeline": {
        "build": {
            "dependsOn": [
                "^build"
            ],
            "outputs": [
                ".next/**",
                "!.next/cache/**",
                "dist/**"
            ]
        },
        "lint": {
            "dependsOn": [
                "^build"
            ]
        },
        "test": {
            "dependsOn": [
                "^build"
            ]
        },
        "test:unit": {
            "dependsOn": [],
            "inputs": [
                "src/**/*.ts",
                "tests/**/*.ts"
            ]
        },
        "dev": {
            "cache": false,
            "persistent": true
        }
    }
}